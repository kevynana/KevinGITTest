-* Created to update the Nonref3flag to N if fare basis includes an N.


SET ASNAMES=ON

JOIN AIR_KEY IN A_BCBS TO ALL AIR_KEY IN S_BCBS
END

TABLE FILE A_BCBS
PRINT NONREF_FLAG  
BY AIR_KEY
WHERE NONREF_FLAG EQ 'R'
WHERE FARE_BAS CONTAINS 'N'
WHERE TKT_DATE GE '2008/04/01'
WHERE TKT_DATE LE '2008/04/30'
ON TABLE HOLD
END
-RUN


MODIFY FILE A_BCBS
FIXFORM FROM HOLD
MATCH AIR_KEY
ON MATCH COMPUTE NONREF_FLAG = 'N';
ON MATCH UPDATE NONREF_FLAG
DATA ON HOLD
END
-RUN










