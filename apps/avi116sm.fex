-              'ON &SORT1.EVAL RECOMPUTE MULTILINES' ELSE 
-              IF &&BREAKBY.EVAL EQ 2 THEN 'ON &SORT1.EVAL PAGE-BREAK' ELSE 
-              'ON TABLE COLUMN-TOTAL' ;
-RUN

