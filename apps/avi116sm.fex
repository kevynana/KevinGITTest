&&OUTLINE2
END
-RUN

-SET &INDEX = &INDEX + 1;
-TOEND2
-RUN

-SET &&SET_DONE = 'Y';

-TYPE "AFTER SET_DONE"

-GOTO XXIT

-NOLOOP;


-SET &&SUBHEAD = 'CURRENT LEVEL DETAILS';
-RUN

