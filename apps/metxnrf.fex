-* Created to update the Nonref3flag to N if fare basis includes an N.


SET ASNAMES=ON

JOIN AIR_KEY IN A7SAUER TO ALL AIR_KEY IN S7SAUER
END

TABLE FILE A7SAUER
PRINT NONREF_FLAG  
BY AIR_KEY
WHERE NONREF_FLAG EQ 'R'
WHERE FARE_BAS CONTAINS 'N'
ON TABLE HOLD
END
-RUN

MODIFY FILE A7SAUER
FIXFORM FROM HOLD
MATCH AIR_KEY
ON MATCH COMPUTE NONREF_FLAG = 'N';
ON MATCH UPDATE NONREF_FLAG
DATA ON HOLD
END
-RUN










